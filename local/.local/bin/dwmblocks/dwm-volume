#!/usr/bin/bash
# Script to format and output current volume level

VOL="$(volume.sh status)"
VOL=${VOL%.*}

if [ $VOL -gt 80 ]; then
    echo " $VOL% "
elif [ $VOL -gt 50 ]; then
    echo " $VOL% "
elif [ $VOL -gt 25 ]; then
    echo " $VOL% "
elif [ $VOL -gt 0 ]; then
    echo " $VOL% "
else
    echo " "
fi

case $BLOCK_BUTTON in
    1) setsid -f "$TERMINAL" -t "Pulse Mixer" -e pulsemixer ;;
    3) pamixer -t ;;
    3) pamixer --allow-boost -i 1 ;;
    4) pamixer --allow-boost -d 1 ;;
esac
